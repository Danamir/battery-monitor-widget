<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:title="@string/category_display_title"
        android:key="category_display">

        <PreferenceScreen
            android:key="display_settings"
            android:title="@string/display_settings_title"
            android:summary="@string/display_settings_summary"
            android:fragment="com.danamir.batterymonitor.DisplaySettings" />

        <PreferenceScreen
            android:key="battery_text_settings"
            android:title="@string/battery_text_settings_title"
            android:summary="@string/battery_text_settings_summary"
            android:fragment="com.danamir.batterymonitor.BatteryTextPreference" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/category_general_title"
        android:key="category_general">

        <EditTextPreference
            android:key="display_length_hours"
            android:title="@string/display_length_title"
            android:summary="@string/display_length_summary"
            android:defaultValue="48"
            android:inputType="number" />

        <SeekBarPreference
            android:key="low_target_percent"
            android:title="@string/low_target_percent_title"
            android:summary="@string/low_target_percent_summary"
            android:defaultValue="20"
            android:max="100"
            android:min="0"
            app:showSeekBarValue="true"
            app:seekBarIncrement="1" />

        <SeekBarPreference
            android:key="high_target_percent"
            android:title="@string/high_target_percent_title"
            android:summary="@string/high_target_percent_summary"
            android:defaultValue="80"
            android:max="100"
            android:min="0"
            app:showSeekBarValue="true"
            app:seekBarIncrement="1" />

        <SeekBarPreference
            android:key="usage_calculation_time"
            android:title="@string/usage_calculation_time_title"
            android:summary="@string/usage_calculation_time_summary"
            android:defaultValue="15"
            android:max="60"
            android:min="1"
            app:showSeekBarValue="true"
            app:seekBarIncrement="1" />

        <ListPreference
            android:key="estimation_source"
            android:title="@string/estimation_source_title"
            android:summary="@string/estimation_source_summary"
            android:entries="@array/estimation_source_entries"
            android:entryValues="@array/estimation_source_values"
            android:defaultValue="all_time_stats" />

        <SwitchPreferenceCompat
            android:key="rounded_time_estimates"
            android:title="@string/rounded_time_estimates_title"
            android:summary="@string/rounded_time_estimates_summary"
            android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/category_graph_title"
        android:key="category_grid">

        <com.danamir.batterymonitor.FloatSeekBarPreference
            android:key="graphLineWidth"
            android:title="@string/graph_line_width_title"
            android:summary="@string/graph_line_width_summary"
            app:defaultFloatValue="2.5"
            app:minFloatValue="0.5"
            app:maxFloatValue="10.0"
            app:floatStepSize="0.5" />

        <SwitchPreferenceCompat
            android:key="staticGridPref"
            android:title="@string/static_grid_title"
            android:summary="@string/static_grid_summary"
            android:defaultValue="false" />

        <EditTextPreference
            android:key="gridVerticalIntervalPref"
            android:title="@string/grid_vertical_interval_title"
            android:summary="@string/grid_vertical_interval_summary"
            android:defaultValue="12 hours"
            android:inputType="text"
            android:maxLength="16" />

        <SeekBarPreference
            android:key="gridVerticalIntervalSubdivisionPref"
            android:title="@string/grid_vertical_interval_subdivision_title"
            android:summary="@string/grid_vertical_interval_subdivision_summary"
            android:defaultValue="2"
            android:max="24"
            android:min="1"
            app:showSeekBarValue="true"
            app:seekBarIncrement="1" />

        <SeekBarPreference
            android:key="gridHorizontalIntervalPref"
            android:title="@string/grid_horizontal_interval_title"
            android:summary="@string/grid_horizontal_interval_summary"
            android:defaultValue="25"
            android:max="100"
            android:min="0"
            app:showSeekBarValue="true"
            app:seekBarIncrement="1" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/category_layout_title"
        android:key="category_layout">

        <SeekBarPreference
            android:key="horizontal_padding"
            android:title="@string/horizontal_padding_title"
            android:summary="@string/horizontal_padding_summary"
            android:defaultValue="0"
            android:max="200"
            android:min="0"
            app:showSeekBarValue="true"
            app:seekBarIncrement="1" />

        <SeekBarPreference
            android:key="vertical_padding"
            android:title="@string/vertical_padding_title"
            android:summary="@string/vertical_padding_summary"
            android:defaultValue="0"
            android:max="200"
            android:min="0"
            app:showSeekBarValue="true"
            app:seekBarIncrement="1" />

        <SwitchPreferenceCompat
            android:key="show_y_axis_labels"
            android:title="@string/show_y_axis_labels_title"
            android:summary="@string/show_y_axis_labels_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/category_data_title"
        android:key="category_data">

        <Preference
            android:key="reset_statistics"
            android:title="@string/reset_statistics_title"
            android:summary="@string/reset_statistics_summary" />

        <Preference
            android:key="clear_preferences"
            android:title="@string/clear_preferences_title"
            android:summary="@string/clear_preferences_summary" />

        <Preference
            android:key="view_event_log"
            android:title="@string/view_event_log_title"
            android:summary="@string/view_event_log_summary" />

    </PreferenceCategory>
</PreferenceScreen>
