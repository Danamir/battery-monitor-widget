<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditTextPreference
        android:key="display_length_hours"
        android:title="@string/display_length_title"
        android:summary="@string/display_length_summary"
        android:defaultValue="48"
        android:inputType="number" />

    <SeekBarPreference
        android:key="horizontal_padding"
        android:title="@string/horizontal_padding_title"
        android:summary="@string/horizontal_padding_summary"
        android:defaultValue="20"
        android:max="200"
        android:min="0"
        app:showSeekBarValue="true"
        app:seekBarIncrement="2" />

    <SeekBarPreference
        android:key="vertical_padding"
        android:title="@string/vertical_padding_title"
        android:summary="@string/vertical_padding_summary"
        android:defaultValue="10"
        android:max="200"
        android:min="0"
        app:showSeekBarValue="true"
        app:seekBarIncrement="2" />

    <PreferenceScreen
        android:key="theme_colors"
        android:title="@string/theme_colors_title"
        android:summary="@string/theme_colors_summary"
        android:fragment="com.danamir.batterymonitor.ThemeSettings" />

    <SwitchPreferenceCompat
        android:key="show_y_axis_labels"
        android:title="@string/show_y_axis_labels_title"
        android:summary="@string/show_y_axis_labels_summary"
        android:defaultValue="false" />

    <SwitchPreferenceCompat
        android:key="staticGridPref"
        android:title="@string/static_grid_title"
        android:summary="@string/static_grid_summary"
        android:defaultValue="true" />

    <EditTextPreference
        android:key="gridVerticalIntervalPref"
        android:title="@string/grid_vertical_interval_title"
        android:summary="@string/grid_vertical_interval_summary"
        android:defaultValue="6 hours"
        android:inputType="text"
        android:maxLength="16" />

    <Preference
        android:key="view_event_log"
        android:title="@string/view_event_log_title"
        android:summary="@string/view_event_log_summary" />
</PreferenceScreen>
