<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="0dp">

    <!-- Background battery graph -->
    <ImageView
            android:id="@+id/battery_graph"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:contentDescription="@string/widget_name"/>

    <!-- Simple linear layout overlay - flatter hierarchy for RemoteViews -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

        <!-- Top Row -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

            <Button
                    android:id="@+id/click_zone_top_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    style="?android:attr/borderlessButtonStyle"/>

            <Button
                    android:id="@+id/click_zone_top"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    style="?android:attr/borderlessButtonStyle"/>

            <Button
                    android:id="@+id/click_zone_top_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>

        <!-- Middle Row -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

            <Button
                    android:id="@+id/click_zone_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    style="?android:attr/borderlessButtonStyle"/>

            <Button
                    android:id="@+id/click_zone_center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    style="?android:attr/borderlessButtonStyle"/>

            <Button
                    android:id="@+id/click_zone_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>

        <!-- Bottom Row -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

            <Button
                    android:id="@+id/click_zone_bottom_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    style="?android:attr/borderlessButtonStyle"/>

            <Button
                    android:id="@+id/click_zone_bottom"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    style="?android:attr/borderlessButtonStyle"/>

            <Button
                    android:id="@+id/click_zone_bottom_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
